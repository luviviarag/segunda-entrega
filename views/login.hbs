<!doctype html>
<html lang = 'en'>
  <head>
    <meta charset="uft-8"/>
    <title>Segundo ejercicio </title>
    <link href="css/style.css" rel="
    stylesheet" >
    <img src="img/logo.png"  width="120" height="105" alt="TDEA Virtual"/>
     <h1>Bienvenidos</h1>
      <p>
        Sistemas de matriculas TDEA virtual
    </p>  
  </head>
  <body>
      <br>
      {{#if sesion}}
       <form class="form-inline my-2 my-lg-0" action="/salir" method="get">  
          <figure>
          <img src="data:img/png;base64,{{avatar}}"
               alt="No tiene foto de perfil" width="100"
               height="85">
            <figcaption>{{nombre}}</figcaption>
          </figure>       
          <a href="/salir">Salir</a>
       </form>
       <br>
       <br>
       <br>
        {{#if coordinador}}   
          <button onclick="location.href='/matriculados'">Ver matriculados</button>
          <button onclick="location.href='/coordinador'" >Crear curso</button>
          <button onclick="location.href='/actualizar'" >Cerrar curso</button>
          <button >Eliminar interesado</button>
          <button onclick="location.href='/interesado'">Cursos disponibles</button>
        {{else}}
          
          {{#if aspirante}}
            <button onclick="location.href='/interesado'">Ver cursos</button>
          {{else}}
            <button onclick="location.href='/aspirante'">Matricular</button>
          {{/if}}
          <button onclick="location.href='/contactanos'">Contactanos</button>
        {{/if}}
      {{else}}
      <p>{{mensaje}}</p>
      {{/if}}
    </div>
   {{>footer}}